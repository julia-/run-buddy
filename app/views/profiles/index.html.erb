<%= render 'header' %>
<p id="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>

<h2>Buddies</h2>

<h3>Find buddies in your area</h3>

<%= form_with url: profiles_path, local: true, method: :get do |f| %>
  <%= f.label :query, 'Search by postcode' %>
  <%= f.text_field :query %>
  <%= f.submit 'Search' %>
<% end %>

<%= render @search_profiles_by_postcode %>

<%= link_to 'New Profile', new_profile_path %>
